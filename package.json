{
  "name": "clippailot-desktop",
  "version": "1.0.11",
  "private": true,
  "description": "YouTube search, view, and download client with license-aware gating",
  "main": "dist/main/index.js",
  "author": "Ron Lederer",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=20.19.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "concurrently \"vite\" \"tsc -p tsconfig.node.json -w\" \"cross-env NODE_ENV=development DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "build": "vite build && tsc -p tsconfig.node.json",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder --win nsis",
    "dist:publish": "npm run build && electron-builder --win nsis --publish always",
    "release": "node scripts/create-release.js",
    "release:patch": "node scripts/create-release.js patch",
    "release:minor": "node scripts/create-release.js minor",
    "release:major": "node scripts/create-release.js major",
    "version:patch": "node scripts/version-bump.js patch",
    "version:minor": "node scripts/version-bump.js minor",
    "version:major": "node scripts/version-bump.js major",
    "version:build": "node scripts/version-bump.js build",
    "clean": "node scripts/cleanup.js",
    "test": "echo \"No tests configured yet\" && exit 0"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "googleapis": "^156.0.0",
    "i18next": "^25.4.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^15.7.1",
    "zod": "^4.0.17",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@types/node": "^24.3.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/sharp": "^0.31.1",
    "@vitejs/plugin-react": "^5.0.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^32.2.6",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.6",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  }
}